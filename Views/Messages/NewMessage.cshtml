@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> userManager 
@model Lab4_3_AspNetMVC_BlindDating.Models.MailMessage
@{
    ViewData["Title"] = "New Message";
}

<h2>Create</h2>

<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Send">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MessageTitle" class="control-label"></label>
                <input asp-for="MessageTitle" class="form-control" />
                <span asp-validation-for="MessageTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MessageText" class="control-label"></label>
                <input asp-for="MessageText" class="form-control" />
                <span asp-validation-for="MessageText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="text" name="toProfileId" value="@ViewBag.ToProfileId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Send Message" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
